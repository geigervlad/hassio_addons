{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:recommended",
    ":rebaseStalePrs",
    "semanticCommits"
  ],
  "baseBranches": [
    "master"
  ],
  "gitAuthor": "Renovate Bot <renovate-no-reply@smartmansion.de",
  "packageRules": [{
    "description": "Automatically merge minor and patch-level updates",
    "matchUpdateTypes": [
      "minor",
      "patch",
      "digest",
    ],
    "automerge": true,
    "automergeType": "branch",
    "platformAutomerge": true
  }]
}
